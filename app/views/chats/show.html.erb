<div class="container">
  <div class="d-flex justify-content-between align-items-center mt-3 mb-2">
    <h5 class="mb-0 text-secondary">Editing: <span class="text-primary"><%= @component.name %></span></h5>
  </div>
  <div id="messages" class="mt-3">
    <%= render 'messages/messages', messages: @chat.messages, project: @project, component: @component %>
  </div>
  <div id="new_message_container" class="mb-3">
    <%= render 'messages/form', chat: @chat, message: @message, component: @component, project: @project %>
  </div>
</div>
