<div class="row">
  <div class="col-2 border-end">
    <nav id="navbar-example3" class="sidebar-scroll pt-3 flex-column align-items-stretch pe-4">
      <% @components.each do |component| %>
        <nav class="nav nav-pills flex-column">
          <a class="nav-link" href="#component-<%= component.id %>"><%= component.name %></a>
        </nav>
      <% end %>
    </nav>
  </div>
  <div class="col-9">
    <div class="title-bar d-flex justify-content-between mt-3">
      <h1><%= @project.title.capitalize %> Components</h1>
      <button type="button" class="btn btn-primary new-component-btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Create a New Component
      </button>
    </div>
    <div data-bs-spy="scroll" data-bs-target="#navbar-example3" data-bs-smooth-scroll="true" class="scrollspy-example-2" tabindex="0">
      <% @components.each do |component| %>
        <div id="component-<%= component.id %>">
          <div class="component-name-box">
            <%= link_to project_component_path(@project, component) do %>
              <h4><%= component.name %></h4>
            <% end %>
            <%= link_to "Delete ðŸ—‘ï¸", component_path(component), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete the component #{component.name} ?"}, class: "delete-button" %>
          </div>
          <iframe src="<%= preview_project_component_path(@project, component) %>"
        style="width: 100%; height: 400px; border: 1px solid #ccc; border-radius: 8px; margin-top: 8px; margin-bottom: 8px;">
          </iframe>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Create a New Component</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@project, @component] do |f| %>
          <%= f.error_notification %>
          <%= f.input :name %>
          <%= f.submit 'Submit', class: 'btn btn-success mt-3' %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
