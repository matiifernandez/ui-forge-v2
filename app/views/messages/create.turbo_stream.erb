<%= turbo_stream.append "messages" do %>
  <%= render 'messages/messages', messages: @chat.messages.order(created_at: :asc).last(2), project: @project, component: @component %>
<% end %>
<%= turbo_stream.update "new_message_container" do %>
  <%= render 'messages/form', chat: @chat, message: Message.new, project: @project, component: @component %>
<% end %>
