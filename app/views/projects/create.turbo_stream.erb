<%= turbo_stream.replace "project_form" do %>
  <turbo-frame id="project_form">
    <div class="text-center py-5" data-controller="redirect" data-redirect-url-value="<%= project_components_path(@project) %>">
      <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Redirecting...</span>
      </div>
      <p class="mt-3 text-muted">Project created! Redirecting...</p>
    </div>
  </turbo-frame>
<% end %>
